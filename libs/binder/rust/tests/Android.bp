// The Rust test harness doesn't let us run anything on the main thread, and we
// need to initialize IPCThreadState there. This is a tiny hack to do this.
cc_library_static {
    name: "libbinder_rs_test_init_hack",
    shared_libs: [
        "libbinder",
    ],
    srcs: [
        "MainThreadInit.cpp",
    ],
}

rust_test {
    name: "rustBinderTest",
    srcs: ["integration.rs"],
    edition: "2018",
    shared_libs: [
        "libbinder",
        "libutils",
        "libc++",
    ],
    static_libs: [
        "libbinder_rs_test_init_hack",
    ],
    rlibs: [
        "libbinder_rs",
        "liblazy_static",
        "liblibc",
    ],
    dylibs: [
        "libtest",
    ],
    flags: [
        "-C debuginfo=2",
    ],
}

rust_test {
    name: "rustBinderLibTest",
    srcs: ["binder_lib_test.rs"],
    edition: "2018",
    test_harness: false,
    shared_libs: [
        "libbinder",
        "libutils",
        "libc++",
    ],
    rlibs: [
        "libbinder_rs",
        "liblibc",
    ],
    flags: [
        "-C debuginfo=2",
    ],
}
